{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "schedule": [
    "before 3am on Monday"
  ],
  "prConcurrentLimit": 4,
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "excludePackageNames": [
        "ismorphic-git",
        "memfs"
      ],
      "groupName": "devDependencies",
      "automerge": true
    }
  ]
}
